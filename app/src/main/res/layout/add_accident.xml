<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:background="@color/white_light"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="32dp"
        android:text="Report an accident"
        android:textSize="18sp"/>

    <android.support.v7.widget.CardView


        android:layout_margin="16dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        style="@style/CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp">

        <Button

            android:id="@+id/clickPhotoCardView"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_photo_camera_black_24dp"
            android:gravity="center"
            android:text="Click Photo"
            android:textAllCaps="false"
            android:textSize="24sp"/>
    </android.support.v7.widget.CardView>

    <include
        android:layout_margin="16dp"
        android:id="@+id/displayImages"
        layout="@layout/display_images_add_accident"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        style="@style/CardView"
        android:layout_marginRight="16dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp">

        <Button
            android:textAllCaps="false"
            android:id="@+id/attachLocation"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_photo_camera_black_24dp"
            android:gravity="center"
            android:text="Attach Location"
            android:textSize="24sp"/>
    </android.support.v7.widget.CardView>

    <include

        android:layout_margin="16dp"
        layout="@layout/display_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/displayLocation"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp"
        style="@style/CardView"
        app:cardElevation="8dp">

        <Button

            android:id="@+id/contactPersoncardView"
            android:textAllCaps="false"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_photo_camera_black_24dp"
            android:gravity="center"
            android:text="Contact Details"
            android:textSize="24sp"/>
    </android.support.v7.widget.CardView>
<include
    android:id="@+id/displayContact"
    android:layout_margin="16dp"
    android:layout_height="wrap_content"
    layout="@layout/display_contact_person"
    android:layout_width="match_parent"
    />

    <android.support.v7.widget.CardView
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="center"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@color/dark"
        style="@style/CardView"
        app:cardElevation="8dp">

        <Button
            android:id="@+id/reportcardView"
            android:textAllCaps="false"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Report"
            android:textColor="@color/white"
            android:textSize="24sp"/>
    </android.support.v7.widget.CardView>
</LinearLayout>
</ScrollView>
