<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_margin="8dp"
    app:cardElevation="8dp"
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <include
        android:id="@+id/displayImages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/display_images_add_accident"
        />
    <include
        android:id="@+id/displayLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/display_location"
        />
    <include
        android:id="@+id/displayContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/display_contact_person"/>

    </LinearLayout>
</android.support.v7.widget.CardView>
